# --- Server ---
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000

# --- Google Vertex AI (Gemini) ---
GOOGLE_CLOUD_PROJECT=
VERTEX_LOCATION=us-central1
GEMINI_MODEL=gemini-2.5-flash

# --- RAG / Vector DB ---
RAG_DB_PATH=./data/rag.sqlite
RAG_TOP_K=5

# Google Programmable Search Engine (Custom Search JSON API)
# Used as a live-search fallback when local/wiki search isn't finding relevant pages.
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_CX=
RAG_SOURCES_PATH=./rag_sources.json

# --- Fake "Gold" Donations ---
# Optional; defaults to RAG_DB_PATH
GOLD_DB_PATH=

# --- Public Chat History ---
# Optional; defaults to RAG_DB_PATH
HISTORY_DB_PATH=
 
# Public history persistence backend.
# sqlite: local file (ephemeral on Cloud Run)
# firestore: persistent in Google Cloud Firestore
HISTORY_BACKEND=sqlite
FIRESTORE_COLLECTION=public_chat

# --- PayPal Donations ---
PAYPAL_ENV=sandbox  # sandbox|live
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_RETURN_URL=http://localhost:8000/donate/success
PAYPAL_CANCEL_URL=http://localhost:8000/donate/cancel
